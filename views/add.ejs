<% include ./partials/header.ejs %>
  


<!-- Main Container -->
    <div class="max-w-4xl mx-auto mt-10 bg-white rounded-2xl shadow-lg p-8">
      <h1 class="text-2xl font-semibold text-gray-800 mb-6">
        Create a new Pin
      </h1>

      <form
        action="/create"
        method="POST"
        enctype="multipart/form-data"
        class="space-y-6"
      >
        <!-- Image Upload -->
        <div class="flex flex-col items-center justify-center border-2 border-dashed border-gray-300 rounded-xl p-6 bg-gray-50 hover:bg-gray-100 transition cursor-pointer">
          <input
            type="file"
            name="postimage"
            id="image"
            class="hidden"
            onchange="previewImage(event)"
            required
          />
          <label for="image" class="cursor-pointer flex flex-col items-center">
            <i class="ri-upload-2-line text-4xl text-gray-400 mb-2"></i>
            <span class="text-gray-600">Click to upload an image</span>
          </label>
          <img
            id="preview"
            src=""
            alt=""
            class="hidden mt-4 w-64 h-64 object-cover rounded-xl"
          />
        </div>

        <!-- Title -->
        <div>
          <label class="block text-gray-700 font-medium mb-1" for="title"
            >Title</label
          >
          <input
            type="text"
            name="title"
            id="title"
            placeholder="Add your title"
            class="w-full border border-gray-300 rounded-xl px-4 py-2 focus:outline-none focus:ring-2 focus:ring-[#e60023]"
            required
          />
        </div>

        <!-- Description -->
        <div>
          <label class="block text-gray-700 font-medium mb-1" for="desc"
            >Description</label
          >
          <textarea
            name="description"
            id="desc"
            rows="4"
            placeholder="Tell everyone what your Pin is about"
            class="w-full border border-gray-300 rounded-xl px-4 py-2 focus:outline-none focus:ring-2 focus:ring-[#e60023]"
          ></textarea>
        </div>

        <!-- Save Button -->
        <div class="flex justify-end">
          <button
            type="submit"
            class="bg-[#e60023] text-white px-6 py-2 rounded-full font-semibold hover:bg-[#c1001f] transition"
          >
            Save Pin
          </button>
        </div>
      </form>
    </div>

    <script>
      function previewImage(event) {
        const preview = document.getElementById("preview");
        const file = event.target.files[0];
        if (file) {
          preview.src = URL.createObjectURL(file);
          preview.classList.remove("hidden");
        }
      }
    </script>


  
